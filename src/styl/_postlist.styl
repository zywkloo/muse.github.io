.page_posts
    .tree-posts
        display block
        width 100%
    #search
       background transparent
       svg
           background-color transparent
.tree-posts
    padding-top: 43px
    width 347px
    height 100%
    position fixed
    background-color purple
    overflow-y auto
    top 0
    +below(rem(960px))
        display none
 
    h3
        color black
        position relative
        margin rem(100px) 0
        &:before
            content ""
            width 150px
            height 20px
            position absolute
            bottom 0
.post-item
    text-align left
    padding rem(5px) rem(20px)
    position relative
    .content
        cf();
        +below(cut)
            text-align center
            stack()
        a
            +above(cut)
                col(4.2/6)
            text-decoration none
            border none
        .date
            color main
        .post-title
            color black
            position relative
            padding 0
            font-size rem(16px)
            margin 0
            text-align center
            &.selected
                background white
            &:hover
                background-color rgba(199, 178, 136, 0.32)
            +above(cut)
                text-align left
                margin-left rem(-10px)
                display initial
                font-size rem(17px)
                text-decoration none
